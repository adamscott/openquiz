<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    tools:context="ca.openquiz.mobile.currentGame.EndOfGameAct" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/screenCenter"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/team1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <include
            android:id="@+id/player1Team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/team1Label"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player2Team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player1Team1"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player3Team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player2Team1"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player4Team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player3Team1"
            layout="@layout/endofgame_player" />

        <TextView
            android:id="@+id/team2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player4Team1"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <include
            android:id="@+id/player1Team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/team2Label"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player2Team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player1Team2"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player3Team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player2Team2"
            layout="@layout/endofgame_player" />

        <include
            android:id="@+id/player4Team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/player3Team2"
            layout="@layout/endofgame_player" />

        <RelativeLayout
            android:id="@id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp" >

            <ImageButton
                android:id="@+id/currentGame_btnHome"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:src="@drawable/home" />
        </RelativeLayout>
    </RelativeLayout>

    
</FrameLayout>