package applicationTools;

import java.awt.Dimension;

public class ButtonManager {
	
	private static Dimension textButtonDimension = new Dimension(150, 40);
	private static Dimension iconButtonDimension = new Dimension(40, 40);
	private static Dimension iconButtonDimension2 = new Dimension(30, 30);
	private static Dimension iconButtonDimensionSmall = new Dimension(20, 20);
	private static Dimension logoWithTextDimension = new Dimension(180, 80);
		
	public static Dimension getTextButtonDimension() {
		return textButtonDimension;
	}

	public static Dimension getIconButtonDimension() {
		return iconButtonDimension;
	}
	
	public static Dimension getLogoWithTextDimension() {
		return logoWithTextDimension;
	}
	
	public static Dimension getIconButtonDimension2() {
		return iconButtonDimension2;
	}
	
	public static Dimension getIconButtonDimensionSmall(){
		return iconButtonDimensionSmall;
	}
}
